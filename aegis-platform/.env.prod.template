# Production Environment Variables Template for Aegis Platform
# Copy this file to .env.prod and fill in actual values

# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_ROOT_PASSWORD=your_mysql_root_password_here
DB_NAME=aegis_production
DB_USER=aegis_user
DB_PASSWORD=your_secure_db_password_here
DB_PORT=3306

# ===============================
# APPLICATION PORTS
# ===============================
BACKEND_PORT=8000
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
REDIS_PORT=6379
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
METRICS_PORT=9090

# ===============================
# SECURITY KEYS (GENERATE STRONG KEYS!)
# ===============================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_256_bit_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
GRAFANA_SECRET_KEY=your_grafana_secret_key_here

# ===============================
# JWT CONFIGURATION
# ===============================
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===============================
# CORS ORIGINS (Your Domain)
# ===============================
CORS_ORIGINS=["https://aegis.yourdomain.com", "https://www.aegis.yourdomain.com", "https://api.aegis.yourdomain.com"]

# ===============================
# LOGGING & MONITORING
# ===============================
LOG_LEVEL=INFO
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# ===============================
# AI/LLM PROVIDERS
# ===============================
DEFAULT_LLM_PROVIDER=openai
ENABLE_OPENAI=true
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

ENABLE_AZURE_OPENAI=false
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo

ENABLE_ANTHROPIC=false
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ===============================
# EXTERNAL INTEGRATIONS
# ===============================
ENABLE_OPENVAS=false
OPENVAS_HOST=your.openvas.server.com
OPENVAS_USERNAME=your_openvas_username
OPENVAS_PASSWORD=your_openvas_password

ENABLE_OPENCTI=false
OPENCTI_URL=https://your.opencti.server.com
OPENCTI_TOKEN=your_opencti_api_token

# ===============================
# EMAIL CONFIGURATION
# ===============================
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@aegis.yourdomain.com

# ===============================
# AUTHENTICATION (Optional)
# ===============================
ENABLE_AZURE_AUTH=false
AZURE_CLIENT_ID=your_azure_app_client_id
AZURE_CLIENT_SECRET=your_azure_app_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ===============================
# SSL/TLS CONFIGURATION
# ===============================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===============================
# BACKUP CONFIGURATION
# ===============================
BACKUP_S3_BUCKET=aegis-backups-your-company
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# ===============================
# DOMAIN CONFIGURATION
# ===============================
DOMAIN=aegis.yourdomain.com
API_DOMAIN=api.aegis.yourdomain.com