# ==============================================
# Aegis Risk Management Platform - Production Environment Configuration
# ==============================================
# Copy this file to .env and configure your production settings

# ==============================================
# Core Application Settings
# ==============================================
ENVIRONMENT=production
DEBUG=false
APP_NAME="Aegis Risk Management Platform"
APP_VERSION="1.0.0"
LOG_LEVEL=INFO

# ==============================================
# Database Configuration
# ==============================================
# For Production: Use PostgreSQL
DATABASE_URL=postgresql://aegis_user:CHANGE_THIS_PASSWORD@localhost:5432/aegis_db

# For Development: Use SQLite (uncomment below)
# DATABASE_URL=sqlite:///./aegis_development.db

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://localhost:6379/0

# ==============================================
# Security & JWT Configuration
# ==============================================
# IMPORTANT: Change these in production!
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_2025
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_IN_PRODUCTION_2025
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256
ALGORITHM=HS256

# ==============================================
# CORS Configuration
# ==============================================
# Add your frontend domains here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://yourdomain.com"]

# ==============================================
# File Upload & Storage
# ==============================================
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=["pdf", "docx", "txt", "csv", "json", "png", "jpg", "jpeg"]

# ==============================================
# Logging and Monitoring
# ==============================================
ENABLE_AUDIT_LOGGING=true

# ==============================================
# AI/LLM Provider Configuration
# ==============================================
# Core AI Settings
ENABLE_AI_FEATURES=true
DEFAULT_LLM_PROVIDER=openai
FALLBACK_LLM_PROVIDERS=["litellm", "openrouter"]
ENABLE_PROVIDER_ROTATION=true
ENABLE_COST_TRACKING=true
DAILY_COST_LIMIT=100.0

# OpenAI Configuration
ENABLE_OPENAI=true
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Azure OpenAI Configuration
ENABLE_AZURE_OPENAI=false
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo

# Google Gemini Configuration
ENABLE_GEMINI=false
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# Anthropic Claude Configuration
ENABLE_ANTHROPIC=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# LiteLLM Configuration (Universal Gateway)
ENABLE_LITELLM=false
LITELLM_API_KEY=your_litellm_api_key_here

# OpenRouter Configuration
ENABLE_OPENROUTER=false
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==============================================
# External Integrations
# ==============================================

# OpenVAS Vulnerability Scanner
ENABLE_OPENVAS=false
OPENVAS_HOST=localhost
OPENVAS_PORT=9390
OPENVAS_USERNAME=your_openvas_username
OPENVAS_PASSWORD=your_openvas_password

# OpenCTI Threat Intelligence
ENABLE_OPENCTI=false
OPENCTI_URL=http://localhost:8080
OPENCTI_TOKEN=your_opencti_token

# ==============================================
# Email Configuration
# ==============================================
ENABLE_EMAIL=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@aegis.example.com

# ==============================================
# Microsoft Entra ID (Azure AD) Authentication
# ==============================================
ENABLE_AZURE_AUTH=false
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ==============================================
# Additional AI Providers (Optional)
# ==============================================

# DeepSeek
ENABLE_DEEPSEEK=false
DEEPSEEK_API_KEY=your_deepseek_api_key

# Cohere
ENABLE_COHERE=false
COHERE_API_KEY=your_cohere_api_key

# Mistral AI
ENABLE_MISTRAL=false
MISTRAL_API_KEY=your_mistral_api_key

# Hugging Face
ENABLE_HUGGINGFACE=false
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Together AI
ENABLE_TOGETHER=false
TOGETHER_API_KEY=your_together_api_key

# Local AI Providers
ENABLE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434

ENABLE_LMSTUDIO=false
LMSTUDIO_BASE_URL=http://localhost:1234

ENABLE_TEXTGEN=false
TEXTGEN_BASE_URL=http://localhost:5000

# Custom OpenAI-Compatible Endpoint
ENABLE_CUSTOM=false
CUSTOM_BASE_URL=http://localhost:8000
CUSTOM_API_KEY=your_custom_api_key
